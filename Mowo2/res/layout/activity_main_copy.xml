<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

        <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/colors"
        android:layout_below="@+id/tabs"
        />
    
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/header"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/preference_item_padding_side"
            android:paddingRight="@dimen/preference_item_padding_side"
            android:text="Test" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Today 31 October, 2013"
            android:textSize="32dip" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffe0e0e0" >

        <RelativeLayout
            android:id="@+id/JobItemActivity_JobOverviewLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:layout_marginTop="6.0dip"
            android:background="?android:selectableItemBackground"
            android:clickable="true" >

            <TextView
                android:id="@+id/JobControlsFragment_JobNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/JobControlsFragment_RateTextView"
                android:layout_centerVertical="true"
                android:layout_marginLeft="?android:listPreferredItemPaddingLeft"
                android:layout_toLeftOf="@+id/JobControlsFragment_RateTextView"
                android:text="Setec Astronomy"
                android:textAppearance="?android:textAppearanceListItem" />

            <TextView
                android:id="@+id/JobControlsFragment_RateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="?android:listPreferredItemPaddingRight"
                android:text="$72.12/hr"
                android:textAppearance="?android:textAppearanceListItemSmall"
                android:textColor="#ff669900" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/JobControlsFragment_ButtonsLayout"
            android:layout_width="fill_parent"
            android:layout_height="54.0dip"
            android:layout_below="@id/JobItemActivity_JobOverviewLayout" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="4.0dip"
                android:background="?android:dividerVertical" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="4.0dip"
                android:background="?android:dividerVertical" />

            <View
                android:id="@+id/VerticalLine"
                android:layout_width="1.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4.0dip"
                android:layout_marginTop="4.0dip"
                android:background="?android:dividerVertical" />

            <Button
                android:id="@+id/JobControlsFragment_ClockInOutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/VerticalLine"
                android:background="?android:selectableItemBackground"
                android:text="Clock In Now"
                android:textColor="#ff007700" />

            <Button
                android:id="@+id/JobControlsFragment_StartStopClockAtButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/VerticalLine"
                android:background="?android:selectableItemBackground"
                android:text="Start Clock At..." />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/JobControlsFragment_OnClockDetailLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/JobControlsFragment_ButtonsLayout"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/JobControlsFragment_OnClockDetailsTextViews"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="3.0dip"
                android:layout_marginTop="3.0dip" >

                <View
                    android:id="@+id/OnClockDetailVerticalLine"
                    android:layout_width="1.0dip"
                    android:layout_height="1.0dip"
                    android:layout_centerHorizontal="true"
                    android:background="?android:dividerVertical"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/JobControlsFragment_OnSinceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/JobControlsFragment_EarningsTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="false"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="false"
                    android:layout_marginLeft="?android:listPreferredItemPaddingLeft"
                    android:layout_marginRight="6.0dip"
                    android:layout_toLeftOf="@+id/JobControlsFragment_ElapsedTimeTextView"
                    android:singleLine="false"
                    android:text="24.78h today ($467.20)"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#ff526691"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/JobControlsFragment_CommentsTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/JobControlsFragment_OnSinceTextView"
                    android:layout_marginLeft="?android:listPreferredItemPaddingLeft"
                    android:layout_marginRight="?android:listPreferredItemPaddingRight"
                    android:layout_marginTop="2.0dip"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:maxLines="2"
                    android:text="this is my test comment text."
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#ff666666"
                    android:textSize="11.0sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@id/JobControlsFragment_EarningsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="false"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="false"
                    android:layout_marginRight="?android:listPreferredItemPaddingRight"
                    android:layout_toRightOf="@id/JobControlsFragment_ElapsedTimeTextView"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="$1,723.12"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#ff669900" />

                <TextView
                    android:id="@id/JobControlsFragment_ElapsedTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/JobControlsFragment_EarningsTextView"
                    android:layout_alignLeft="@id/OnClockDetailVerticalLine"
                    android:layout_alignParentRight="false"
                    android:layout_centerHorizontal="false"
                    android:layout_centerInParent="false"
                    android:layout_centerVertical="false"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="24.12h"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#ff526691" />

                <ProgressBar
                    android:id="@+id/TimePerDayProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/TimePerDayProgressBar"
                    android:layout_below="@id/JobControlsFragment_CommentsTextView"
                    android:layout_marginLeft="?android:listPreferredItemPaddingLeft"
                    android:layout_marginRight="?android:listPreferredItemPaddingRight"
                    android:alpha="0.66"
                    android:fitsSystemWindows="false"
                    android:max="100"
                    android:progress="30" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_alignParentBottom="false"
                android:layout_below="@id/JobControlsFragment_OnClockDetailsTextViews"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="4.0dip"
                android:layout_marginTop="4.0dip"
                android:background="?android:dividerVertical" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>