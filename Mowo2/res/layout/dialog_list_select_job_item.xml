<?xml version="1.0" encoding="utf-8"?>
<com.cummins.mowo.widgets.JobListViewCheckableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/job_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="@drawable/dialog_list_selector"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/list_item_job_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/list_item_job_subject"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/list_item_job_number"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textIsSelectable="false" />

     <RadioButton
        android:id="@+id/selector"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" 
        android:layout_marginRight="16dp"
        android:button="@drawable/radio_button_custom"/>
 
</com.cummins.mowo.widgets.JobListViewCheckableLayout>