<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timecard_list_day"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dip"
    android:orientation="vertical"
    android:weightSum="100" >
    
    <TextView 
        android:id="@+id/day_date_holder"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="25"
        android:text="Day"/>

    <RelativeLayout
        android:id="@+id/day_container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="75" >

        <Button
            android:id="@+id/day_add_new_timecard_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Add New Session" 
            android:layout_centerHorizontal="true"/>
        
        <Button
            android:id="@+id/day_add_full_day_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Full Day Leave" 
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:layout_alignLeft="@id/day_add_new_timecard_session"
            android:layout_below="@id/day_add_new_timecard_session"
        />
                
    </RelativeLayout>

</LinearLayout>